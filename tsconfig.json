{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "types": ["mocha", "chai"]
  },
  "include": [
    "src/**/*.ts",
    "src/main.ts",
    "src/tests/**/*.spec.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
